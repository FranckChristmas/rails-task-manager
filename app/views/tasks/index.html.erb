<h1 class="h1">My tasks</h1>


<ul>
  <% @tasks.each do |task| %>
    <li class=".form-check-input "> 
    <%= link_to task.title, task_path(task), class: "btn btn-light m-1 " %>  
    <%= link_to destroy_task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>  
        <i class="fa-solid fa-trash text-secondary"></i>
    <%end%>
  <% end %>

</ul>


<%= link_to new_task_path, class: "m-5 btn btn-primary" do%>
<i class="fa-solid fa-square-plus">  Add tasks</i>
    <%end%>

